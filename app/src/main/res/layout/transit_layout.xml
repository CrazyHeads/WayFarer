<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/action_image"
            android:layout_width="25sp"
            android:layout_height="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="48dp"
            android:background="@drawable/walking" />

        <TextView
            android:id="@+id/place_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/action_image"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/action_image"
            android:layout_toRightOf="@+id/action_image"
            android:text="PlaceText"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/rate_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/place_view"
            android:layout_marginEnd="43dp"
            android:layout_marginRight="43dp"
            android:text="Rate/Price"
            android:textColor="#000000"
            android:textStyle="bold"/>


    </RelativeLayout>

</RelativeLayout>